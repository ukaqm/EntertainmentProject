@{
    ViewData["Title"] = "Add/Update";
}

@model Entertainer

@* ChatGPT created this styling  *@

<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .form-container {
            padding: 20px;
            margin-top: 20px;
            background-color: #f8f9fa;
            border: 1px solid #e3e6f0;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        .btn-primary {
            width: 100%;
        }

        .validation-summary {
            margin-top: 20px;
            font-weight: bold;
            color: #721c24;
        }
    </style>
</head>
<body>
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="EntertainerList">Back</a>
    <div class="container">
        <div class="row justify-content-center">
            <div class="text-center">
                <h3>Entertainer Form</h3>
            </div>
            <div class="col-md-8">
                <form method="post" class="form-container">
                    <input type="hidden" asp-for="EntertainerId" />

                    <div class="form-group">
                        <label asp-for="EntStageName">Stage Name:</label>
                        <input asp-for="EntStageName" class="form-control" />
                        <span asp-validation-for="EntStageName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EntSsn">SSN:</label>
                        <input asp-for="EntSsn" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="EntStreetAddress">Street Address:</label>
                        <input asp-for="EntStreetAddress" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="EntCity">City:</label>
                        <input asp-for="EntCity" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="EntState">State:</label>
                        <input asp-for="EntState" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="EntZipCode">Zip Code:</label>
                        <input asp-for="EntZipCode" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="EntPhoneNumber">Phone Number:</label>
                        <input asp-for="EntPhoneNumber" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="EntWebPage">Webpage:</label>
                        <input asp-for="EntWebPage" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="EntEmailAddress">Email:</label>
                        <input asp-for="EntEmailAddress" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="DateEntered">Entry Date:</label>
                        <input asp-for="DateEntered" class="form-control" />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>

                    <div asp-validation-summary="All" class="validation-summary"></div>
                </form>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

